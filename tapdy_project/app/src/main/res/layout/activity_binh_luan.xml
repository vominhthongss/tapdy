<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BinhLuanActivity" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BÌNH LUẬN"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tenQuanBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tenquan" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/diaChiBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="diachi" />

    <RatingBar
        android:id="@+id/soSao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="0.5" />

    <EditText
        android:id="@+id/vietBinhLuanBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:inputType="textPersonName"
        android:hint="Bạn cảm thấy như thế nào ?"/>

    <ImageButton
        android:id="@+id/chonHinhAnhTaiLenBinhLuan"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/tai_anh" />

    <ProgressBar
        android:id="@+id/progressBarBL"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnBinhLuanBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BÌNH LUẬN" />

    <Button
        android:id="@+id/btnTroLaiBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRỞ LẠI" />

    <ImageView
        android:id="@+id/hinhAnhTaiLenBinhLuan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/noimage" />
</LinearLayout>