<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckinActivity" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECK-IN"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tenQuanCheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ten quan" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/diaChiCheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dia chi" />

    <EditText
        android:id="@+id/vietBinhLuanCheckin"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:inputType="textPersonName"
        android:hint="Bạn cảm thấy như thế nào ?"/>

    <ImageButton
        android:id="@+id/chonHinhAnhTaiLenCheckin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/tai_anh" />

    <ProgressBar
        android:id="@+id/progressBarCK"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnCheckinCheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check in" />

    <Button
        android:id="@+id/btnTroLaiCheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRỞ LẠI" />

    <ImageView
        android:id="@+id/hinhAnhTaiLenCheckin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/noimage" />

</LinearLayout>