<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/avtBinhLuan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/noimage"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/txtHoTenBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Ho ten nguoi binh luan"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RatingBar
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:id="@+id/saoDanhGia"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5" />

    <ImageView
        android:id="@+id/imgAnhBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/noimage" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/txtNoiDungBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="italic"
        android:textSize="16dp"
        android:text="Noi dung binh luan" />

    <TextView
        android:id="@+id/txtMaBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*mã bìnnh luận ẩn đi*"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtUserBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*ẩn đi*"
        android:visibility="invisible"/>

</LinearLayout>